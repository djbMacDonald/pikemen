<h1>People Killed by Law Enforcement</h1>

<div class='col-xs-4 col-xs-offset-8 filter text-right'>
  <form>
    <% if (params[:agency] && Agency.all.collect(&:name).include?(params[:agency][:name])) %>
      <%= select("agency", "name", Agency.all.collect(&:name), selected: params[:agency][:name]) %>
    <% else %>
      <%= select("agency", "name", Agency.all.collect(&:name)) %>
    <% end %>
    <input type="submit" value="Filter" />
  </form>
</div>

<% @reports.each do |report| %>
  <div class='col-xs-3 entry'>
    <%= link_to report.name, report_path(report) %>
  </div>
<% end %>
