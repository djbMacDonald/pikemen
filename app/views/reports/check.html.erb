<h1>Unvalidated Reports</h1>
<% @reports.each do |report| %>
  <div class='panel row'>
    <div class='col-xs-2'>
      <%= report.name %>
    </div>
    <div class='col-xs-1'>
        <%= button_to 'Verify', edit_report_path(report), method: :get, class: 'btn btn-success veri' %>
    </div>
    <div class='col-xs-1'>
      <%= button_to 'Archive', report, method: :delete, class: 'btn btn-warning veri' %>
    </div>
  </div>
<% end %>
