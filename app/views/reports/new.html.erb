<%= form_for @report do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.select :state, Report::STATES, prompt: 'Pick one' %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= date_select :report, :incident_date, include_blank: true, start_year: 2000, end_year: Time.now.year %>

<%= f.submit %>

<% end %>
