<%= form_for @report do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.select :state, Report::STATES, prompt: 'Pick one' %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.label :month %>
<%= f.number_field :month %>

<%= f.label :day %>
<%= f.number_field :day %>

<%= f.label :year %>
<%= f.number_field :year %>

<%= f.submit %>

<% end %>
